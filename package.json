{
  "name": "Weekly_Challange_3",
  "version": "1.0.0",
  "description": "-",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss style.comp.css",
    "prefixer:css": "postcss --use autoprefixer -b \"last 5 versions\" style.comp.css -o style.prefix.css",
    "compress:css": " node-sass style.prefix.css style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefixer:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kalwi7/weekly3"
  },
  "author": "Dawid",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kalwi7/weekly3/issues"
  },
  "devDependencies": {
    "autoprefixer": "^9.2.1",
    "concat": "^1.0.3",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.1"
  }
}
